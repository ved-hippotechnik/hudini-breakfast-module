# Server Configuration
PORT=8080
GIN_MODE=debug

# Database Configuration (Oracle)
DATABASE_URL=oracle://username:password@localhost:1521/XE

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Oracle Hospitality Integration Platform (OHIP)
OHIP_BASE_URL=https://api.oraclehospitality.com
OHIP_CLIENT_ID=your-ohip-client-id
OHIP_CLIENT_SECRET=your-ohip-client-secret
OHIP_ENVIRONMENT=sandbox
OHIP_VERSION=v1
OHIP_TIMEOUT=30

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/breakfast-module.log

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8081

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
